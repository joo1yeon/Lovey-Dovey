<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#B8D9C0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plaveN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/netmarble_b"
            android:textSize="35dp"
            android:textColor="#ffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/star_click"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/netmarble_m"
            android:text="정보"
            android:textColor="#B8D9C0"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/dateReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/netmarble_m"
            android:text="리뷰"
            android:textColor="#8C8C8C"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/infoLine"
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_marginLeft="75dp"
            android:background="#B8D9C0" />

        <TextView
            android:id="@+id/reviewLine"
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_marginLeft="85dp"
            android:background="#8C8C8C" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"></FrameLayout>
</LinearLayout>
